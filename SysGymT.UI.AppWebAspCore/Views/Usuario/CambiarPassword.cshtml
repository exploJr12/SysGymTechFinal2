@model SysGymT.EntidadesDeNegocio.Usuario

@{
    ViewData["Title"] = "CambiarPassword";
}

<link rel="stylesheet" href="~/css/machines/create.css">

<div class="row">
    <div class="col-md-4 offset-md-4 main-div text-center">
        <h1>Modificar Usuario</h1>
        <form asp-action="CambiarPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id_Usuario" class="form-control" />
            <div>
                <div>
                    <div class="form-group">
                        <label asp-for="Login" class="control-label"></label>
                        <input asp-for="Login" class="form-control" disabled />
                        <span asp-validation-for="Login" class="text-danger"></span>
                    </div>
                </div>
                <div>
                    <div class="form-group">
                        <label class="control-label">Password actual</label>
                        <input type="password" name="pPasswordAnt" class="form-control" required />
                    </div>
                </div>
            </div>
            <div class="row">
                <div>
                    <div class="form-group">
                        <label class="control-label">Nuevo password</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword_aux" class="control-label"></label>
                        <input asp-for="ConfirmPassword_aux" class="form-control" />
                        <span asp-validation-for="ConfirmPassword_aux" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div>
                    <div class="form-group">
                        <input type="submit" value="Cambiar password" class="btn btn-primary" />
                    </div>
                    <span class="text-danger">@ViewBag.Error</span>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(function () {
            $("form input[name]").trigger("blur");
        });
    </script>
}
